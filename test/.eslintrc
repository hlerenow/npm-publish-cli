{
  "extends":"standard",
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "ActiveXObject": false,
    "XDomainRequest": true,
    "describe": true,
    "it": true,
    "expect": true
  },
  "rules":{
    "no-unused-expressions": "off",
    "semi":[
      "error",
      "always"
    ],
    "space-before-function-paren":[
      "error",
      "never"
    ],
    "indent":[
      "error",
      4
    ],
    "no-return-await": ["off"]
  }
}
